{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "vitest/globals"],
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "checkJs": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "server/**/*.js",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "typings/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist", "public", "tests"]
}
